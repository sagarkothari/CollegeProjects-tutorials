<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        
        <!-- button Color Code  -->
        
        <shape  android:shape="rectangle" >
             <gradient
			    android:startColor="#CC0000"
			    android:centerColor="#CC0000"
			    android:endColor="#CC0000"   
			    android:angle="90" />

            <corners android:radius="20dp" />
            <stroke android:width="10dp" android:color="#CC0000" />

            
        </shape>
    </item>

    <item android:right="10dp">
        
        <!-- grey Color Code  -->

        <shape  android:shape="rectangle">
           
	      	<gradient
	      	  
	    		android:startColor="#FF4444"   
	    		android:centerColor="#F93939"
	    		android:endColor="#FA3030"
	    		android:angle="90" />
	      	
	      	<corners android:radius="10dp" />
	      	<stroke android:width="1dp" android:color="#FF4444" />
			
        </shape>

    </item>
    
</layer-list>
